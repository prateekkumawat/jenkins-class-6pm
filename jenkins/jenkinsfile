pipeline {
    agent {
        label 'build'
    } 
    tools {
        git 'gittool'
    }
    
    stages {
        stage("AppCode Checkout"){
            steps{
                git branch:"main", url:"https://github.com/prateekkumawat/jenkins-class-6pm.git"
            }
        }

        stage("run script"){
            steps{
                sh ' chmod +x script.sh '
                sh ' bash ./script.sh ' 
            }
        }
        
        stage("post Actions"){
            steps{
                echo "performs post actions"
            }
        }
    }
}